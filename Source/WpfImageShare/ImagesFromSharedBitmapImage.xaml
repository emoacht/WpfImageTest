<UserControl x:Class="WpfImageShare.ImagesFromSharedBitmapImage"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:WpfImageShare"
			 mc:Ignorable="d"
			 d:DesignWidth="1200" d:DesignHeight="400">
	<UserControl.Resources>
		<BitmapImage x:Key="BitmapImageKey" UriSource="pack://application:,,,/Resources/sealion.jpg"
					 PresentationOptions:Freeze="True"/>
	</UserControl.Resources>
	<StackPanel Orientation="Horizontal">
		<Button>
			<Image Source="{StaticResource BitmapImageKey}"/>
		</Button>
		<Button>
			<Image Source="{StaticResource BitmapImageKey}"/>
		</Button>
	</StackPanel>
</UserControl>